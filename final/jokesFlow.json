{
    "description": "A New Flow",
    "states": [
      {
        "name": "Trigger",
        "type": "trigger",
        "transitions": [
          {
            "event": "incomingMessage"
          },
          {
            "next": "welcome_to_joketown",
            "event": "incomingCall"
          },
          {
            "next": "call_user_1",
            "event": "incomingRequest"
          },
          {
            "event": "incomingParent"
          }
        ],
        "properties": {
          "offset": {
            "x": 0,
            "y": 0
          }
        }
      },
      {
        "name": "welcome_to_joketown",
        "type": "say-play",
        "transitions": [
          {
            "next": "main_menu",
            "event": "audioComplete"
          }
        ],
        "properties": {
          "voice": "Polly.Brian",
          "offset": {
            "x": 80,
            "y": 200
          },
          "loop": 1,
          "say": "Hello welcome to Joke town!",
          "language": "en-GB"
        }
      },
      {
        "name": "main_menu",
        "type": "gather-input-on-call",
        "transitions": [
          {
            "next": "split_1",
            "event": "keypress"
          },
          {
            "event": "speech"
          },
          {
            "event": "timeout"
          }
        ],
        "properties": {
          "number_of_digits": 1,
          "speech_timeout": "auto",
          "offset": {
            "x": 90,
            "y": 420
          },
          "loop": 2,
          "finish_on_key": "#",
          "say": "Press 1 to go to an open mic. Press 2 to submit your new joke. Press 3 listen and rate jokes. Press 4 to hear the joke of the week",
          "language": "en-US",
          "stop_gather": true,
          "gather_language": "en",
          "profanity_filter": "true",
          "timeout": 5
        }
      },
      {
        "name": "split_1",
        "type": "split-based-on",
        "transitions": [
          {
            "event": "noMatch"
          },
          {
            "next": "connect_call_1",
            "event": "match",
            "conditions": [
              {
                "friendly_name": "If value equal_to 1",
                "arguments": [
                  "{{widgets.main_menu.Digits}}"
                ],
                "type": "equal_to",
                "value": "1"
              }
            ]
          },
          {
            "next": "record_voicemail_1",
            "event": "match",
            "conditions": [
              {
                "friendly_name": "If value equal_to 2",
                "arguments": [
                  "{{widgets.main_menu.Digits}}"
                ],
                "type": "equal_to",
                "value": "2"
              }
            ]
          },
          {
            "next": "http_1",
            "event": "match",
            "conditions": [
              {
                "friendly_name": "If value equal_to 3",
                "arguments": [
                  "{{widgets.main_menu.Digits}}"
                ],
                "type": "equal_to",
                "value": "3"
              }
            ]
          },
          {
            "next": "say_play_1",
            "event": "match",
            "conditions": [
              {
                "friendly_name": "If value equal_to 4",
                "arguments": [
                  "{{widgets.main_menu.Digits}}"
                ],
                "type": "equal_to",
                "value": "4"
              }
            ]
          }
        ],
        "properties": {
          "input": "{{widgets.main_menu.Digits}}",
          "offset": {
            "x": 100,
            "y": 670
          }
        }
      },
      {
        "name": "connect_call_1",
        "type": "connect-call-to",
        "transitions": [
          {
            "event": "callCompleted"
          },
          {
            "event": "hangup"
          }
        ],
        "properties": {
          "sip_username": "",
          "sip_endpoint": "",
          "offset": {
            "x": -250,
            "y": 1070
          },
          "caller_id": "{{contact.channel.address}}",
          "record": false,
          "noun": "conference",
          "to": "openmic",
          "sip_password": "",
          "timeout": 30
        }
      },
      {
        "name": "record_voicemail_1",
        "type": "record-voicemail",
        "transitions": [
          {
            "next": "main_menu",
            "event": "recordingComplete"
          },
          {
            "event": "noAudio"
          },
          {
            "event": "hangup"
          }
        ],
        "properties": {
          "transcribe": true,
          "offset": {
            "x": 190,
            "y": 1060
          },
          "trim": "trim-silence",
          "transcription_callback_url": "https://cdennis.ngrok.io/handle-joke-transcription",
          "play_beep": "true",
          "timeout": 5,
          "max_length": 3600
        }
      },
      {
        "name": "http_1",
        "type": "make-http-request",
        "transitions": [
          {
            "next": "rate_joke",
            "event": "success"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "offset": {
            "x": 590,
            "y": 1050
          },
          "method": "GET",
          "content_type": "application/x-www-form-urlencoded;charset=utf-8",
          "url": "https://cdennis.ngrok.io/api/jokes"
        }
      },
      {
        "name": "rate_joke",
        "type": "gather-input-on-call",
        "transitions": [
          {
            "next": "http_2",
            "event": "keypress"
          },
          {
            "event": "speech"
          },
          {
            "event": "timeout"
          }
        ],
        "properties": {
          "number_of_digits": 2,
          "speech_timeout": "auto",
          "offset": {
            "x": 610,
            "y": 1290
          },
          "loop": 1,
          "finish_on_key": "#",
          "say": "Ready for it?\n\n{{widgets.http_1.parsed.joke}}\n\nOn a scale of 1 to 5, how do you rate this joke?",
          "stop_gather": true,
          "gather_language": "en",
          "profanity_filter": "true",
          "timeout": 5
        }
      },
      {
        "name": "say_play_1",
        "type": "say-play",
        "transitions": [
          {
            "event": "audioComplete"
          }
        ],
        "properties": {
          "play": "https://twil.io/joke-of-the-week",
          "offset": {
            "x": 1140,
            "y": 550
          },
          "loop": 1
        }
      },
      {
        "name": "say_play_2",
        "type": "say-play",
        "transitions": [
          {
            "next": "say_play_1",
            "event": "audioComplete"
          }
        ],
        "properties": {
          "offset": {
            "x": 700,
            "y": 370
          },
          "loop": 1,
          "say": "This is the joke of the week:"
        }
      },
      {
        "name": "call_user_1",
        "type": "make-outgoing-call-v2",
        "transitions": [
          {
            "next": "say_play_2",
            "event": "answered"
          },
          {
            "event": "busy"
          },
          {
            "event": "noAnswer"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "machine_detection_speech_threshold": "2400",
          "detect_answering_machine": false,
          "send_digits": "",
          "sip_auth_username": "",
          "offset": {
            "x": 690,
            "y": 130
          },
          "recording_status_callback": "",
          "sip_auth_password": "",
          "recording_channels": "mono",
          "timeout": 60,
          "machine_detection": "Enable",
          "trim": "true",
          "record": false,
          "machine_detection_speech_end_threshold": "1200",
          "machine_detection_timeout": "30",
          "from": "{{flow.channel.address}}",
          "to": "{{contact.channel.address}}",
          "machine_detection_silence_timeout": "5000"
        }
      },
      {
        "name": "http_2",
        "type": "make-http-request",
        "transitions": [
          {
            "next": "main_menu",
            "event": "success"
          },
          {
            "event": "failed"
          }
        ],
        "properties": {
          "offset": {
            "x": 640,
            "y": 1560
          },
          "method": "POST",
          "content_type": "application/x-www-form-urlencoded;charset=utf-8",
          "parameters": [
            {
              "value": "{{widgets.http_1.parsed.id}}",
              "key": "JokeId"
            },
            {
              "value": "{{widgets.rate_joke.Digits}}",
              "key": "Rating"
            }
          ],
          "url": "https://cdennis.ngrok.io/api/jokes/ratings"
        }
      }
    ],
    "initial_state": "Trigger",
    "flags": {
      "allow_concurrent_calls": true
    }
  }